{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "rootDir": ".",
    "outDir": "dist-types"
  },
  "include": [
    "agent-backend/src/**/*.ts",
    "agent-backend/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-types"
  ]
}
